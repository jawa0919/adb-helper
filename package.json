{
  "name": "adb-helper",
  "displayName": "ADB Helper",
  "description": "Devices Wifi Connect, File Explorer, APK Manager",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.56.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "workspaceContains:**/AndroidManifest.xml",
    "workspaceContains:**.apk"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "adb-helper.adbVersion",
        "title": "ADB Version"
      },
      {
        "command": "adb-helper.Devices.refresh",
        "title": "refresh Devices",
        "icon": "$(refresh)"
      },
      {
        "command": "adb-helper.Devices.disconnect",
        "title": "disconnect all wifi connect Devices",
        "icon": "$(debug-disconnect)"
      },
      {
        "command": "adb-helper.Devices.connect",
        "title": "connect wifi Device",
        "icon": "$(broadcast)"
      },
      {
        "command": "adb-helper.Devices.openSDCardExplorer",
        "title": "Open SDCard Explorer"
      },
      {
        "command": "adb-helper.Devices.openRootExplorer",
        "title": "Open Root Explorer"
      },
      {
        "command": "adb-helper.Devices.openAppManager",
        "title": "Open App Manager"
      },
      {
        "command": "adb-helper.Explorer.refresh",
        "title": "refresh Explorer",
        "icon": "$(refresh)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "adb-helper",
          "title": "ADB Helper",
          "icon": "assets/adb-helper.svg"
        }
      ]
    },
    "views": {
      "adb-helper": [
        {
          "id": "adb-helper.Devices",
          "name": "Devices",
          "when": "adb-helper:isADBSupport"
        },
        {
          "id": "adb-helper.Explorer",
          "name": "Explorer",
          "when": "adb-helper:isADBSupport"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "adb-helper.Devices.refresh",
          "when": "view == adb-helper.Devices",
          "group": "navigation@1"
        },
        {
          "command": "adb-helper.Devices.disconnect",
          "when": "view == adb-helper.Devices",
          "group": "navigation@2"
        },
        {
          "command": "adb-helper.Explorer.refresh",
          "when": "view == adb-helper.Explorer",
          "group": "navigation@1"
        }
      ],
      "view/item/context": [
        {
          "command": "adb-helper.Devices.connect",
          "when": "view == adb-helper.Devices && viewItem == usb",
          "group": "inline"
        },
        {
          "command": "adb-helper.Devices.openSDCardExplorer",
          "when": "view == adb-helper.Devices",
          "group": "d1@1"
        },
        {
          "command": "adb-helper.Devices.openRootExplorer",
          "when": "view == adb-helper.Devices",
          "group": "d1@2"
        },
        {
          "command": "adb-helper.Devices.openAppManager",
          "when": "view == adb-helper.Devices"
        }
      ]
    },
    "configuration": [
      {
        "title": "ADB Helper",
        "properties": {
          "adb-helper.startPort": {
            "type": "number",
            "default": "5555",
            "description": "wifi Connect Start Port",
            "scope": "window"
          }
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.2.2",
    "@types/node": "14.x",
    "@types/vscode": "^1.59.0",
    "@typescript-eslint/eslint-plugin": "^4.26.0",
    "@typescript-eslint/parser": "^4.26.0",
    "eslint": "^7.27.0",
    "glob": "^7.1.7",
    "mocha": "^8.4.0",
    "typescript": "^4.3.2",
    "vscode-test": "^1.5.2"
  },
  "dependencies": {
    "execa": "^5.1.1"
  }
}
